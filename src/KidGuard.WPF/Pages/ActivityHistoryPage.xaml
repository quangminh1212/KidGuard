<Page x:Class="KidGuard.WPF.Pages.ActivityHistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1020"
      Title="Activity History">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Guide -->
        <materialDesign:Card Grid.Row="0" Margin="25,20,25,15" Padding="0" 
                           materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Step Indicator -->
                <Border Grid.Column="0" Background="{DynamicResource PrimaryHueMidBrush}" Width="5"/>

                <!-- Title and Instructions -->
                <StackPanel Grid.Column="1" Margin="25,20">
                    <TextBlock Text="Lịch sử hoạt động" FontSize="26" FontWeight="Bold" Foreground="#212121"/>
                    <TextBlock Text="Theo dõi mọi hoạt động của trẻ theo thời gian thực" 
                             FontSize="14" Foreground="#616161" Margin="0,5,0,10"/>
                    
                    <!-- Quick Guide -->
                    <Border Background="#E3F2FD" CornerRadius="5" Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="LightbulbOnOutline" Grid.Column="0"
                                                   Foreground="#1976D2" VerticalAlignment="Top"
                                                   Width="20" Height="20" Margin="0,2,10,0"/>
                            <TextBlock Grid.Column="1" TextWrapping="Wrap" FontSize="12" Foreground="#424242">
                                <Run FontWeight="Bold">Hướng dẫn nhanh:</Run>
                                <LineBreak/>
                                <Run>• Chọn ngày để xem lịch sử</Run>
                                <LineBreak/>
                                <Run>• Click vào hoạt động để xem chi tiết</Run>
                                <LineBreak/>
                                <Run>• Dùng bộ lọc để tìm kiếm nhanh</Run>
                            </TextBlock>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,25,0">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                          materialDesign:ButtonAssist.CornerRadius="20"
                          Background="#4CAF50" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileExcel" Margin="0,0,5,0"/>
                            <TextBlock Text="Xuất Excel"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                          materialDesign:ButtonAssist.CornerRadius="20">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Printer" Margin="0,0,5,0"/>
                            <TextBlock Text="In báo cáo"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Filter Section with Visual Steps -->
        <materialDesign:Card Grid.Row="1" Margin="25,0,25,15" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Step 1: Choose Date -->
                <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Step Number -->
                        <Border Grid.Column="0" Width="30" Height="30" CornerRadius="15"
                              Background="#2196F3" Margin="0,0,15,0">
                            <TextBlock Text="1" Foreground="White" FontWeight="Bold"
                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Chọn khoảng thời gian" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Từ ngày:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <DatePicker Grid.Column="1" materialDesign:HintAssist.Hint="Chọn ngày bắt đầu"
                                          SelectedDate="{x:Static sys:DateTime.Today}"
                                          xmlns:sys="clr-namespace:System;assembly=mscorlib"/>

                                <TextBlock Grid.Column="2" Text="Đến ngày:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                                <DatePicker Grid.Column="3" materialDesign:HintAssist.Hint="Chọn ngày kết thúc"
                                          SelectedDate="{x:Static sys:DateTime.Today}"
                                          xmlns:sys="clr-namespace:System;assembly=mscorlib"/>

                                <!-- Quick Date Selection -->
                                <StackPanel Grid.Column="5" Orientation="Horizontal" Margin="20,0,0,0">
                                    <TextBlock Text="Nhanh:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                                    <Button Style="{StaticResource MaterialDesignFlatButton}" Content="Hôm nay" Margin="0,0,5,0"/>
                                    <Button Style="{StaticResource MaterialDesignFlatButton}" Content="7 ngày" Margin="0,0,5,0"/>
                                    <Button Style="{StaticResource MaterialDesignFlatButton}" Content="30 ngày"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Step 2: Filter Options -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Step Number -->
                    <Border Grid.Column="0" Width="30" Height="30" CornerRadius="15"
                          Background="#FF9800" Margin="0,0,15,0">
                        <TextBlock Text="2" Foreground="White" FontWeight="Bold"
                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Lọc theo loại hoạt động (tùy chọn)" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        
                        <WrapPanel>
                            <CheckBox Content="Ứng dụng" IsChecked="True" Margin="0,0,20,0"
                                    materialDesign:CheckBoxAssist.CheckBoxSize="20"/>
                            <CheckBox Content="Website" IsChecked="True" Margin="0,0,20,0"
                                    materialDesign:CheckBoxAssist.CheckBoxSize="20"/>
                            <CheckBox Content="Tệp tin" IsChecked="True" Margin="0,0,20,0"
                                    materialDesign:CheckBoxAssist.CheckBoxSize="20"/>
                            <CheckBox Content="Hệ thống" Margin="0,0,20,0"
                                    materialDesign:CheckBoxAssist.CheckBoxSize="20"/>
                            <CheckBox Content="Cảnh báo" Margin="0,0,20,0"
                                    materialDesign:CheckBoxAssist.CheckBoxSize="20"
                                    Foreground="#F44336"/>
                            
                            <TextBox materialDesign:HintAssist.Hint="Tìm kiếm theo từ khóa..."
                                   Width="250" Margin="20,0,0,0"
                                   materialDesign:TextFieldAssist.HasLeadingIcon="True"
                                   materialDesign:TextFieldAssist.LeadingIcon="Magnify"/>
                        </WrapPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>

        <!-- Main Timeline Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Summary Stats -->
            <materialDesign:Card Grid.Column="0" Margin="25,0,10,25" Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="THỐNG KÊ NHANH" FontWeight="Bold" FontSize="12" 
                                 Foreground="#757575" Margin="0,0,0,15"/>

                        <!-- Today Stats -->
                        <Border Background="#E8F5E9" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Hôm nay" FontWeight="Bold" Margin="0,0,0,5"/>
                                <StackPanel Grid.Row="1">
                                    <TextBlock FontSize="24" FontWeight="Bold" Foreground="#4CAF50">
                                        <Run Text="4h 32m"/>
                                    </TextBlock>
                                    <TextBlock Text="Tổng thời gian" FontSize="11" Foreground="#757575"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Activity Count -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Background="#FFF3E0" CornerRadius="8" Padding="10" Margin="0,0,5,0">
                                <StackPanel>
                                    <TextBlock Text="156" FontSize="20" FontWeight="Bold" Foreground="#FF9800"/>
                                    <TextBlock Text="Hoạt động" FontSize="10" Foreground="#757575"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" Background="#FFEBEE" CornerRadius="8" Padding="10" Margin="5,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="12" FontSize="20" FontWeight="Bold" Foreground="#F44336"/>
                                    <TextBlock Text="Cảnh báo" FontSize="10" Foreground="#757575"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <Separator Margin="0,5,0,15"/>

                        <!-- Top Activities -->
                        <TextBlock Text="HOẠT ĐỘNG NHIỀU NHẤT" FontWeight="Bold" FontSize="12" 
                                 Foreground="#757575" Margin="0,0,0,10"/>

                        <StackPanel>
                            <!-- Activity Item 1 -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="8" Height="8" CornerRadius="4" 
                                      Background="#4285F4" Margin="0,0,10,0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Chrome" FontWeight="Bold" FontSize="12"/>
                                    <TextBlock Text="Browser" FontSize="10" Foreground="#757575"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="2h 15m" FontWeight="Bold" FontSize="11"/>
                            </Grid>

                            <!-- Activity Item 2 -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="8" Height="8" CornerRadius="4" 
                                      Background="#62B363" Margin="0,0,10,0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Minecraft" FontWeight="Bold" FontSize="12"/>
                                    <TextBlock Text="Game" FontSize="10" Foreground="#757575"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="1h 30m" FontWeight="Bold" FontSize="11"/>
                            </Grid>

                            <!-- Activity Item 3 -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="8" Height="8" CornerRadius="4" 
                                      Background="#7289DA" Margin="0,0,10,0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Discord" FontWeight="Bold" FontSize="12"/>
                                    <TextBlock Text="Chat" FontSize="10" Foreground="#757575"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="47m" FontWeight="Bold" FontSize="11"/>
                            </Grid>
                        </StackPanel>

                        <Separator Margin="0,5,0,15"/>

                        <!-- Help Section -->
                        <Border Background="#F3E5F5" CornerRadius="8" Padding="12">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Kind="HelpCircle" Grid.Column="0"
                                                           Foreground="#9C27B0" Margin="0,0,8,0"/>
                                    <TextBlock Grid.Column="1" Text="Cần trợ giúp?" FontWeight="Bold"/>
                                </Grid>
                                <TextBlock Text="Click vào từng hoạt động để xem chi tiết" 
                                         TextWrapping="Wrap" FontSize="11" Foreground="#757575" Margin="0,0,0,5"/>
                                <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                      Content="Xem hướng dẫn" HorizontalAlignment="Left"
                                      Padding="8,4" Height="28" Foreground="#9C27B0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>

            <!-- Right Panel - Timeline -->
            <materialDesign:Card Grid.Column="1" Margin="10,0,25,25" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Timeline Header -->
                    <Border Grid.Row="0" Background="#FAFAFA" BorderBrush="#E0E0E0" 
                          BorderThickness="0,0,0,1" Padding="20,15">
                        <Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <materialDesign:PackIcon Kind="Timeline" VerticalAlignment="Center" 
                                                       Margin="0,0,10,0" Foreground="#2196F3"/>
                                <TextBlock Text="Dòng thời gian - " FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="17/09/2024" FontSize="16" Foreground="#2196F3" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Hiển thị:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox Width="120" SelectedIndex="0">
                                    <ComboBoxItem>Tất cả</ComboBoxItem>
                                    <ComboBoxItem>Quan trọng</ComboBoxItem>
                                    <ComboBoxItem>Cảnh báo</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Timeline Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            
                            <!-- Timeline Item 1 - Current/Recent -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Time -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="15:45" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="Hiện tại" FontSize="10" Foreground="#4CAF50"/>
                                </StackPanel>

                                <!-- Timeline Line -->
                                <Grid Grid.Column="1" Width="40">
                                    <Line X1="20" Y1="0" X2="20" Y2="200" Stroke="#E0E0E0" StrokeThickness="2"
                                        VerticalAlignment="Stretch"/>
                                    <Border Width="16" Height="16" CornerRadius="8" 
                                          Background="#4CAF50" 
                                          HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0">
                                        <Border Width="8" Height="8" CornerRadius="4" Background="White"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>

                                <!-- Content -->
                                <materialDesign:Card Grid.Column="2" Padding="15" Margin="0,0,0,0"
                                                   materialDesign:ShadowAssist.ShadowDepth="Depth1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="GoogleChrome" Width="20" Height="20"
                                                                       Foreground="#4285F4" Margin="0,0,10,0"/>
                                                <TextBlock Text="Đang sử dụng Chrome" FontWeight="Bold"/>
                                                <materialDesign:Chip Content="Đang hoạt động" Height="20" 
                                                                   Background="#E8F5E9" Foreground="#4CAF50"
                                                                   Margin="10,0,0,0" FontSize="10"/>
                                            </StackPanel>
                                        </Grid>

                                        <StackPanel Grid.Row="1" Margin="0,8,0,0">
                                            <TextBlock Text="Truy cập: youtube.com" FontSize="12" Foreground="#757575"/>
                                            <TextBlock Text="Thời lượng: 15 phút" FontSize="12" Foreground="#757575" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:Card>
                            </Grid>

                            <!-- Timeline Item 2 - Warning -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Time -->
                                <TextBlock Grid.Column="0" Text="15:30" FontWeight="Bold" FontSize="14"/>

                                <!-- Timeline Line -->
                                <Grid Grid.Column="1" Width="40">
                                    <Line X1="20" Y1="0" X2="20" Y2="200" Stroke="#E0E0E0" StrokeThickness="2"
                                        VerticalAlignment="Stretch"/>
                                    <Border Width="16" Height="16" CornerRadius="8" 
                                          Background="#F44336" 
                                          HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>
                                </Grid>

                                <!-- Content -->
                                <materialDesign:Card Grid.Column="2" Padding="15"
                                                   Background="#FFEBEE"
                                                   materialDesign:ShadowAssist.ShadowDepth="Depth1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Alert" Width="20" Height="20"
                                                                       Foreground="#F44336" Margin="0,0,10,0"/>
                                                <TextBlock Text="Cố gắng truy cập website bị chặn" FontWeight="Bold" 
                                                         Foreground="#F44336"/>
                                            </StackPanel>
                                        </Grid>

                                        <StackPanel Grid.Row="1" Margin="0,8,0,0">
                                            <TextBlock Text="Website: facebook.com" FontSize="12" Foreground="#757575"/>
                                            <TextBlock Text="Hành động: Đã chặn" FontSize="12" Foreground="#757575" Margin="0,2,0,0"/>
                                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                                  Content="Xem chi tiết" HorizontalAlignment="Left"
                                                  Padding="8,4" Height="28" Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:Card>
                            </Grid>

                            <!-- Timeline Item 3 - Application -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Time -->
                                <TextBlock Grid.Column="0" Text="14:45" FontWeight="Bold" FontSize="14"/>

                                <!-- Timeline Line -->
                                <Grid Grid.Column="1" Width="40">
                                    <Line X1="20" Y1="0" X2="20" Y2="200" Stroke="#E0E0E0" StrokeThickness="2"
                                        VerticalAlignment="Stretch"/>
                                    <Border Width="16" Height="16" CornerRadius="8" 
                                          Background="#2196F3" 
                                          HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>
                                </Grid>

                                <!-- Content -->
                                <materialDesign:Card Grid.Column="2" Padding="15"
                                                   materialDesign:ShadowAssist.ShadowDepth="Depth1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="GamepadVariant" Width="20" Height="20"
                                                                       Foreground="#62B363" Margin="0,0,10,0"/>
                                                <TextBlock Text="Bắt đầu chơi Minecraft" FontWeight="Bold"/>
                                            </StackPanel>
                                            <TextBlock Text="Kết thúc: 15:25" HorizontalAlignment="Right" 
                                                     FontSize="11" Foreground="#757575"/>
                                        </Grid>

                                        <Grid Grid.Row="1" Margin="0,8,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="40 phút" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Text="Thời lượng" FontSize="10" Foreground="#757575"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Trong giới hạn" FontWeight="Bold" FontSize="12" Foreground="#4CAF50"/>
                                                <TextBlock Text="Còn lại: 1h 20m" FontSize="10" Foreground="#757575"/>
                                            </StackPanel>
                                            
                                            <Button Grid.Column="2" Style="{StaticResource MaterialDesignFlatButton}"
                                                  Content="Chi tiết" HorizontalAlignment="Right"
                                                  Padding="8,4" Height="28"/>
                                        </Grid>
                                    </Grid>
                                </materialDesign:Card>
                            </Grid>

                            <!-- Show More Button -->
                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                  HorizontalAlignment="Center" Margin="0,20,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ClockOutline" Margin="0,0,8,0"/>
                                    <TextBlock Text="Xem thêm hoạt động cũ hơn"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- Floating Help Button -->
        <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
              HorizontalAlignment="Right" VerticalAlignment="Bottom"
              Margin="0,0,40,40" Width="56" Height="56"
              Background="#9C27B0" BorderBrush="#9C27B0"
              ToolTip="Trợ giúp và hướng dẫn">
            <materialDesign:PackIcon Kind="HelpCircle" Width="24" Height="24"/>
        </Button>
    </Grid>
</Page>