<Page x:Class="KidGuard.WPF.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1020"
      Title="Dashboard">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Tổng quan hệ thống" FontSize="28" FontWeight="Bold" Foreground="#333"/>
                    <TextBlock Text="Xin chào! Đây là trạng thái bảo vệ của con bạn hôm nay" 
                             FontSize="14" Foreground="#666" Margin="0,5,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" Style="{StaticResource MaterialDesignRaisedButton}"
                      materialDesign:ButtonAssist.CornerRadius="20"
                      Background="#2196F3" BorderThickness="0" Padding="15,8">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileChart" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="XEM BÁO CÁO CHI TIẾT"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Statistics Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Card 1: Thời gian sử dụng -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,10,0" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" Background="#E3F2FD" CornerRadius="25" 
                              Width="50" Height="50" HorizontalAlignment="Left">
                            <materialDesign:PackIcon Kind="ClockOutline" Width="30" Height="30" 
                                                   Foreground="#2196F3" HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                        </Border>
                        
                        <TextBlock Grid.Row="1" Text="4h 32m" FontSize="32" FontWeight="Bold" 
                                 Foreground="#333" Margin="0,10,0,5"/>
                        <TextBlock Grid.Row="2" Text="Thời gian sử dụng hôm nay" FontSize="12" Foreground="#999"/>
                        
                        <ProgressBar Grid.Row="2" Value="65" Height="4" Margin="0,30,0,0" 
                                   Foreground="#2196F3" Background="#E0E0E0"/>
                    </Grid>
                </materialDesign:Card>

                <!-- Card 2: Ứng dụng đang chạy -->
                <materialDesign:Card Grid.Column="1" Margin="5,0,5,0" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" Background="#E8F5E9" CornerRadius="25" 
                              Width="50" Height="50" HorizontalAlignment="Left">
                            <materialDesign:PackIcon Kind="Apps" Width="30" Height="30" 
                                                   Foreground="#4CAF50" HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                        </Border>
                        
                        <TextBlock Grid.Row="1" Text="12" FontSize="32" FontWeight="Bold" 
                                 Foreground="#333" Margin="0,10,0,5"/>
                        <TextBlock Grid.Row="2" Text="Ứng dụng đang chạy" FontSize="12" Foreground="#999"/>
                        
                        <Border Grid.Row="2" Background="#4CAF50" CornerRadius="10" 
                              Padding="5,2" HorizontalAlignment="Left" Margin="0,28,0,0">
                            <TextBlock Text="An toàn" FontSize="10" Foreground="White" FontWeight="Bold"/>
                        </Border>
                    </Grid>
                </materialDesign:Card>

                <!-- Card 3: Website bị chặn -->
                <materialDesign:Card Grid.Column="2" Margin="5,0,5,0" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" Background="#FFF3E0" CornerRadius="25" 
                              Width="50" Height="50" HorizontalAlignment="Left">
                            <materialDesign:PackIcon Kind="WebCancel" Width="30" Height="30" 
                                                   Foreground="#FF9800" HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                        </Border>
                        
                        <TextBlock Grid.Row="1" Text="24" FontSize="32" FontWeight="Bold" 
                                 Foreground="#333" Margin="0,10,0,5"/>
                        <TextBlock Grid.Row="2" Text="Website đã chặn hôm nay" FontSize="12" Foreground="#999"/>
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,28,0,0">
                            <materialDesign:PackIcon Kind="TrendingUp" Width="16" Height="16" 
                                                   Foreground="#FF9800" VerticalAlignment="Center"/>
                            <TextBlock Text="+15%" FontSize="10" Foreground="#FF9800" 
                                     FontWeight="Bold" Margin="2,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <!-- Card 4: Cảnh báo -->
                <materialDesign:Card Grid.Column="3" Margin="10,0,0,0" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" Background="#FFEBEE" CornerRadius="25" 
                              Width="50" Height="50" HorizontalAlignment="Left">
                            <materialDesign:PackIcon Kind="AlertCircleOutline" Width="30" Height="30" 
                                                   Foreground="#F44336" HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                        </Border>
                        
                        <TextBlock Grid.Row="1" Text="3" FontSize="32" FontWeight="Bold" 
                                 Foreground="#333" Margin="0,10,0,5"/>
                        <TextBlock Grid.Row="2" Text="Cảnh báo cần xem xét" FontSize="12" Foreground="#999"/>
                        
                        <Button Grid.Row="2" Style="{StaticResource MaterialDesignFlatButton}" 
                              Padding="0" Height="20" Margin="0,25,0,0" HorizontalAlignment="Left">
                            <TextBlock Text="Xem ngay →" FontSize="10" Foreground="#F44336" FontWeight="Bold"/>
                        </Button>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Quick Actions -->
            <Grid Grid.Row="2" Margin="0,0,0,25">
                <materialDesign:Card Padding="20">
                    <StackPanel>
                        <TextBlock Text="Hành động nhanh" FontSize="18" FontWeight="Bold" 
                                 Foreground="#333" Margin="0,0,0,15"/>
                        
                        <WrapPanel>
                            <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                                  Margin="0,0,10,10" Padding="15,10">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="TimerOff" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Tạm dừng giới hạn (15 phút)"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                                  Margin="0,0,10,10" Padding="15,10">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Camera" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Chụp màn hình ngay"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                                  Margin="0,0,10,10" Padding="15,10">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Block" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Chặn ứng dụng"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                                  Margin="0,0,10,10" Padding="15,10">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Email" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Gửi báo cáo email"/>
                                </StackPanel>
                            </Button>
                        </WrapPanel>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- Charts Section -->
            <Grid Grid.Row="3" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Activity Timeline -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,10,0" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="300"/>
                        </Grid.RowDefinitions>
                        
                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <TextBlock Text="Hoạt động trong 7 ngày" FontSize="18" FontWeight="Bold" 
                                     Foreground="#333" HorizontalAlignment="Left"/>
                            <ComboBox HorizontalAlignment="Right" Width="120" 
                                    materialDesign:HintAssist.Hint="Chọn tuần">
                                <ComboBoxItem>Tuần này</ComboBoxItem>
                                <ComboBoxItem>Tuần trước</ComboBoxItem>
                            </ComboBox>
                        </Grid>
                        
                        <!-- Chart placeholder -->
                        <Border Grid.Row="1" Background="#FAFAFA" CornerRadius="5">
                            <Grid>
                                <!-- Simple bar chart representation -->
                                <Canvas>
                                    <!-- Add chart visualization here -->
                                </Canvas>
                                <TextBlock Text="📊 Biểu đồ thời gian sử dụng" 
                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                         FontSize="16" Foreground="#999"/>
                            </Grid>
                        </Border>
                    </Grid>
                </materialDesign:Card>

                <!-- Top Applications -->
                <materialDesign:Card Grid.Column="1" Margin="10,0,0,0" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Ứng dụng sử dụng nhiều" FontSize="16" 
                                 FontWeight="Bold" Foreground="#333" Margin="0,0,0,15"/>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- App 1 -->
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" Background="#E3F2FD" CornerRadius="20" 
                                          Width="40" Height="40" Margin="0,0,10,0">
                                        <TextBlock Text="YT" FontWeight="Bold" Foreground="#2196F3"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="YouTube" FontWeight="Bold" FontSize="14"/>
                                        <ProgressBar Value="75" Height="4" Margin="0,5,0,0" 
                                                   Foreground="#2196F3" Background="#E0E0E0"/>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Column="2" Text="2h 15m" FontWeight="Bold" 
                                             Foreground="#666" VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- App 2 -->
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" Background="#E8F5E9" CornerRadius="20" 
                                          Width="40" Height="40" Margin="0,0,10,0">
                                        <TextBlock Text="MC" FontWeight="Bold" Foreground="#4CAF50"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Minecraft" FontWeight="Bold" FontSize="14"/>
                                        <ProgressBar Value="50" Height="4" Margin="0,5,0,0" 
                                                   Foreground="#4CAF50" Background="#E0E0E0"/>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Column="2" Text="1h 30m" FontWeight="Bold" 
                                             Foreground="#666" VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- App 3 -->
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" Background="#FFF3E0" CornerRadius="20" 
                                          Width="40" Height="40" Margin="0,0,10,0">
                                        <TextBlock Text="CH" FontWeight="Bold" Foreground="#FF9800"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Chrome" FontWeight="Bold" FontSize="14"/>
                                        <ProgressBar Value="30" Height="4" Margin="0,5,0,0" 
                                                   Foreground="#FF9800" Background="#E0E0E0"/>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Column="2" Text="47m" FontWeight="Bold" 
                                             Foreground="#666" VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Recent Activity -->
            <materialDesign:Card Grid.Row="4" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="Hoạt động gần đây" FontSize="18" FontWeight="Bold" 
                                 Foreground="#333" HorizontalAlignment="Left"/>
                        <Button Style="{StaticResource MaterialDesignFlatButton}" HorizontalAlignment="Right">
                            <TextBlock Text="Xem tất cả →" Foreground="#2196F3"/>
                        </Button>
                    </Grid>
                    
                    <DataGrid Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False"
                            materialDesign:DataGridAssist.CellPadding="16,8" 
                            materialDesign:DataGridAssist.ColumnHeaderPadding="16,8">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Thời gian" Width="150"/>
                            <DataGridTextColumn Header="Hoạt động" Width="*"/>
                            <DataGridTextColumn Header="Ứng dụng/Website" Width="200"/>
                            <DataGridTextColumn Header="Trạng thái" Width="120"/>
                            <DataGridTemplateColumn Header="Hành động" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </ScrollViewer>
</Page>