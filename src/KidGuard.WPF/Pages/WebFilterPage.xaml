<Page x:Class="KidGuard.WPF.Pages.WebFilterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1020"
      Title="Web Filter">

    <Grid Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="White" materialDesign:ShadowAssist.ShadowDepth="Depth1">
            <Grid Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Lọc Website" FontSize="28" FontWeight="Bold" Foreground="#1A237E"/>
                    <TextBlock Text="Quản lý danh sách website được phép và bị chặn" 
                             FontSize="14" Foreground="#5C6BC0" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:Card Padding="10,5" Background="#E8EAF6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Chế độ:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox materialDesign:HintAssist.Hint="Chọn chế độ" Width="150">
                                <ComboBoxItem IsSelected="True">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Shield" Margin="0,0,5,0"/>
                                        <TextBlock Text="Blacklist"/>
                                    </StackPanel>
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ShieldCheck" Margin="0,0,5,0"/>
                                        <TextBlock Text="Whitelist"/>
                                    </StackPanel>
                                </ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Quick Stats -->
        <Grid Grid.Row="1" Margin="30,20,30,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <materialDesign:Card Grid.Column="0" Margin="0,0,10,0" Padding="20,15">
                <StackPanel>
                    <materialDesign:PackIcon Kind="Web" Width="32" Height="32" 
                                           Foreground="#3F51B5" HorizontalAlignment="Center"/>
                    <TextBlock Text="256" FontSize="24" FontWeight="Bold" 
                             HorizontalAlignment="Center" Margin="0,10,0,5"/>
                    <TextBlock Text="Tổng số website" FontSize="12" Foreground="#757575" 
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Grid.Column="1" Margin="5,0" Padding="20,15">
                <StackPanel>
                    <materialDesign:PackIcon Kind="Block" Width="32" Height="32" 
                                           Foreground="#F44336" HorizontalAlignment="Center"/>
                    <TextBlock Text="47" FontSize="24" FontWeight="Bold" 
                             HorizontalAlignment="Center" Margin="0,10,0,5"/>
                    <TextBlock Text="Website bị chặn" FontSize="12" Foreground="#757575" 
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Grid.Column="2" Margin="5,0" Padding="20,15">
                <StackPanel>
                    <materialDesign:PackIcon Kind="CheckCircle" Width="32" Height="32" 
                                           Foreground="#4CAF50" HorizontalAlignment="Center"/>
                    <TextBlock Text="209" FontSize="24" FontWeight="Bold" 
                             HorizontalAlignment="Center" Margin="0,10,0,5"/>
                    <TextBlock Text="Website cho phép" FontSize="12" Foreground="#757575" 
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Grid.Column="3" Margin="10,0,0,0" Padding="20,15">
                <StackPanel>
                    <materialDesign:PackIcon Kind="Category" Width="32" Height="32" 
                                           Foreground="#FF9800" HorizontalAlignment="Center"/>
                    <TextBlock Text="12" FontSize="24" FontWeight="Bold" 
                             HorizontalAlignment="Center" Margin="0,10,0,5"/>
                    <TextBlock Text="Danh mục" FontSize="12" Foreground="#757575" 
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="30,10,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Categories -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,15,0" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#3F51B5" Padding="20,15">
                        <TextBlock Text="DANH MỤC" FontWeight="Bold" 
                                 Foreground="White" FontSize="14"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Category Items -->
                            <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}"
                                       IsChecked="True" Padding="20,15">
                                <Grid Width="240">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0" Kind="ViewList" 
                                                           VerticalAlignment="Center" Margin="0,0,15,0"/>
                                    <TextBlock Grid.Column="1" Text="Tất cả" VerticalAlignment="Center"/>
                                    <materialDesign:Chip Grid.Column="2" Content="256" Height="20" FontSize="11"/>
                                </Grid>
                            </RadioButton>

                            <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}" Padding="20,15">
                                <Grid Width="240">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0" Kind="AccountGroup" 
                                                           VerticalAlignment="Center" Margin="0,0,15,0" Foreground="#E91E63"/>
                                    <TextBlock Grid.Column="1" Text="Mạng xã hội" VerticalAlignment="Center"/>
                                    <materialDesign:Chip Grid.Column="2" Content="32" Height="20" FontSize="11"/>
                                </Grid>
                            </RadioButton>

                            <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}" Padding="20,15">
                                <Grid Width="240">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0" Kind="GamepadVariant" 
                                                           VerticalAlignment="Center" Margin="0,0,15,0" Foreground="#9C27B0"/>
                                    <TextBlock Grid.Column="1" Text="Game online" VerticalAlignment="Center"/>
                                    <materialDesign:Chip Grid.Column="2" Content="28" Height="20" FontSize="11"/>
                                </Grid>
                            </RadioButton>

                            <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}" Padding="20,15">
                                <Grid Width="240">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0" Kind="PlayCircle" 
                                                           VerticalAlignment="Center" Margin="0,0,15,0" Foreground="#FF5252"/>
                                    <TextBlock Grid.Column="1" Text="Video/Stream" VerticalAlignment="Center"/>
                                    <materialDesign:Chip Grid.Column="2" Content="45" Height="20" FontSize="11"/>
                                </Grid>
                            </RadioButton>

                            <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}" Padding="20,15">
                                <Grid Width="240">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0" Kind="Shopping" 
                                                           VerticalAlignment="Center" Margin="0,0,15,0" Foreground="#FF9800"/>
                                    <TextBlock Grid.Column="1" Text="Mua sắm" VerticalAlignment="Center"/>
                                    <materialDesign:Chip Grid.Column="2" Content="18" Height="20" FontSize="11"/>
                                </Grid>
                            </RadioButton>

                            <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}" Padding="20,15">
                                <Grid Width="240">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0" Kind="Alert" 
                                                           VerticalAlignment="Center" Margin="0,0,15,0" Foreground="#F44336"/>
                                    <TextBlock Grid.Column="1" Text="Nội dung xấu" VerticalAlignment="Center"/>
                                    <materialDesign:Chip Grid.Column="2" Content="67" Height="20" FontSize="11"/>
                                </Grid>
                            </RadioButton>
                        </StackPanel>
                    </ScrollViewer>

                    <Button Grid.Row="2" Style="{StaticResource MaterialDesignRaisedButton}"
                          Margin="15" Background="#4CAF50">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Margin="0,0,5,0"/>
                            <TextBlock Text="Thêm danh mục"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </materialDesign:Card>

            <!-- Right Panel - Website List -->
            <materialDesign:Card Grid.Column="1" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Add Website Section -->
                    <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" 
                          BorderThickness="0,0,0,1" Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" materialDesign:HintAssist.Hint="Nhập URL website (vd: facebook.com)"
                                   FontSize="14" Margin="0,0,10,0" Name="UrlInput"/>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                      Background="#F44336" Margin="0,0,10,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Block" Margin="0,0,5,0"/>
                                        <TextBlock Text="Chặn"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource MaterialDesignOutlinedButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileImport" Margin="0,0,5,0"/>
                                        <TextBlock Text="Nhập từ file"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Search and Filter -->
                    <Grid Grid.Row="1" Margin="20,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" materialDesign:HintAssist.Hint="Tìm kiếm website..."
                               materialDesign:TextFieldAssist.HasLeadingIcon="True"
                               materialDesign:TextFieldAssist.LeadingIcon="Magnify"
                               Margin="0,0,15,0"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                        IsChecked="True" Margin="0,0,10,0"/>
                            <TextBlock Text="Hiện website bị chặn" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Website List -->
                    <DataGrid Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False"
                            materialDesign:DataGridAssist.CellPadding="15,10"
                            materialDesign:DataGridAssist.ColumnHeaderPadding="15,10">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="" Width="50"/>
                            
                            <DataGridTemplateColumn Header="Website" Width="2*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="20" Height="20" Margin="0,0,10,0">
                                                <Image.Source>
                                                    <BitmapImage UriSource="https://www.google.com/s2/favicons?domain=facebook.com"/>
                                                </Image.Source>
                                            </Image>
                                            <TextBlock Text="facebook.com" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Danh mục" Binding="{Binding Category}" Width="*"/>
                            
                            <DataGridTemplateColumn Header="Trạng thái" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <materialDesign:Chip Content="Đã chặn" Background="#FFEBEE" 
                                                           Foreground="#F44336" Height="24" FontSize="11"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Lần truy cập cuối" Binding="{Binding LastAccess}" Width="150"/>

                            <DataGridTemplateColumn Header="Hành động" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                                  ToolTip="Bỏ chặn" Padding="5">
                                                <materialDesign:PackIcon Kind="CheckCircle" Foreground="#4CAF50"/>
                                            </Button>
                                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                                  ToolTip="Xóa" Padding="5">
                                                <materialDesign:PackIcon Kind="Delete" Foreground="#F44336"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                        <!-- Sample Rows -->
                        <DataGrid.Items>
                            <Grid Tag="facebook.com|Mạng xã hội|Đã chặn|2 giờ trước"/>
                            <Grid Tag="youtube.com|Video/Stream|Đã chặn|5 giờ trước"/>
                            <Grid Tag="tiktok.com|Mạng xã hội|Đã chặn|1 ngày trước"/>
                        </DataGrid.Items>
                    </DataGrid>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Page>