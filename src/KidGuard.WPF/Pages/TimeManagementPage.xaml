<Page x:Class="KidGuard.WPF.Pages.TimeManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1020"
      Title="Time Management">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="Quản lý thời gian" FontSize="28" FontWeight="Bold" Foreground="#333"/>
                <TextBlock Text="Thiết lập và theo dõi thời gian sử dụng máy tính" 
                         FontSize="14" Foreground="#666" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Current Status -->
            <Grid Grid.Row="1" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Time Usage Today -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,10,0" Padding="25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Circular Progress -->
                        <Grid Grid.Column="0" Width="180" Height="180" Margin="0,0,30,0">
                            <Ellipse StrokeThickness="15" Stroke="#E0E0E0"/>
                            <Ellipse StrokeThickness="15" Stroke="#2196F3" 
                                   StrokeDashArray="188.5" StrokeDashOffset="47.125"
                                   RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform Angle="-90"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                            
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="75%" FontSize="36" FontWeight="Bold" 
                                         Foreground="#2196F3" HorizontalAlignment="Center"/>
                                <TextBlock Text="Đã sử dụng" FontSize="14" Foreground="#999" 
                                         HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <!-- Time Details -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Thời gian sử dụng hôm nay" FontSize="18" 
                                     FontWeight="Bold" Foreground="#333" Margin="0,0,0,15"/>
                            
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Đã sử dụng:" Foreground="#666"/>
                                <TextBlock Grid.Column="1" Text="4 giờ 32 phút" FontWeight="Bold"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Giới hạn:" Foreground="#666"/>
                                <TextBlock Grid.Column="1" Text="6 giờ" FontWeight="Bold"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Còn lại:" Foreground="#666"/>
                                <TextBlock Grid.Column="1" Text="1 giờ 28 phút" 
                                         FontWeight="Bold" Foreground="#4CAF50"/>
                            </Grid>

                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                  HorizontalAlignment="Left" Margin="0,10,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="Thêm 30 phút" FontWeight="Bold"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <!-- Quick Stats -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <materialDesign:Card Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="CalendarToday" Width="30" Height="30" 
                                                   Foreground="#FF9800" Margin="0,0,0,10"/>
                            <TextBlock Text="Tuần này" FontSize="12" Foreground="#999"/>
                            <TextBlock Text="28h 15m" FontSize="24" FontWeight="Bold" Foreground="#333"/>
                            <ProgressBar Value="70" Height="4" Margin="0,10,0,0" 
                                       Foreground="#FF9800" Background="#E0E0E0"/>
                        </StackPanel>
                    </materialDesign:Card>
                    
                    <materialDesign:Card Padding="20">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="TrendingUp" Width="30" Height="30" 
                                                   Foreground="#4CAF50" Margin="0,0,0,10"/>
                            <TextBlock Text="So với tuần trước" FontSize="12" Foreground="#999"/>
                            <TextBlock Text="-12%" FontSize="24" FontWeight="Bold" Foreground="#4CAF50"/>
                            <TextBlock Text="Giảm 3h 45m" FontSize="11" Foreground="#999" Margin="0,5,0,0"/>
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
            </Grid>

            <!-- Time Schedule -->
            <materialDesign:Card Grid.Row="2" Padding="25" Margin="0,0,0,25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Lịch sử dụng hàng ngày" FontSize="18" FontWeight="Bold" 
                                 Foreground="#333" HorizontalAlignment="Left"/>
                        <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}" 
                                    HorizontalAlignment="Right" IsChecked="True"/>
                    </Grid>

                    <!-- Weekly Schedule Grid -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                        </Grid.RowDefinitions>

                        <!-- Headers -->
                        <TextBlock Grid.Column="0" Grid.Row="0" Text="" />
                        <TextBlock Grid.Column="1" Grid.Row="0" Text="T2" FontWeight="Bold" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Grid.Row="0" Text="T3" FontWeight="Bold" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="3" Grid.Row="0" Text="T4" FontWeight="Bold" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Grid.Row="0" Text="T5" FontWeight="Bold" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="5" Grid.Row="0" Text="T6" FontWeight="Bold" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="6" Grid.Row="0" Text="T7" FontWeight="Bold" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#2196F3"/>
                        <TextBlock Grid.Column="7" Grid.Row="0" Text="CN" FontWeight="Bold" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#F44336"/>

                        <!-- Ngày học -->
                        <TextBlock Grid.Column="0" Grid.Row="1" Text="Ngày học" 
                                 VerticalAlignment="Center" FontWeight="Bold"/>
                        
                        <!-- Time inputs for weekdays -->
                        <materialDesign:Card Grid.Column="1" Grid.Row="1" Margin="5" Padding="10">
                            <TextBox Text="4h" HorizontalAlignment="Center" 
                                   materialDesign:HintAssist.Hint="Giờ"/>
                        </materialDesign:Card>
                        
                        <materialDesign:Card Grid.Column="2" Grid.Row="1" Margin="5" Padding="10">
                            <TextBox Text="4h" HorizontalAlignment="Center"/>
                        </materialDesign:Card>
                        
                        <materialDesign:Card Grid.Column="3" Grid.Row="1" Margin="5" Padding="10">
                            <TextBox Text="4h" HorizontalAlignment="Center"/>
                        </materialDesign:Card>
                        
                        <materialDesign:Card Grid.Column="4" Grid.Row="1" Margin="5" Padding="10">
                            <TextBox Text="4h" HorizontalAlignment="Center"/>
                        </materialDesign:Card>
                        
                        <materialDesign:Card Grid.Column="5" Grid.Row="1" Margin="5" Padding="10">
                            <TextBox Text="4h" HorizontalAlignment="Center"/>
                        </materialDesign:Card>
                        
                        <materialDesign:Card Grid.Column="6" Grid.Row="1" Margin="5" Padding="10" 
                                           Background="#E3F2FD">
                            <TextBox Text="6h" HorizontalAlignment="Center"/>
                        </materialDesign:Card>
                        
                        <materialDesign:Card Grid.Column="7" Grid.Row="1" Margin="5" Padding="10" 
                                           Background="#FFEBEE">
                            <TextBox Text="6h" HorizontalAlignment="Center"/>
                        </materialDesign:Card>

                        <!-- Cuối tuần -->
                        <TextBlock Grid.Column="0" Grid.Row="2" Text="Giờ cho phép" 
                                 VerticalAlignment="Center" FontWeight="Bold"/>
                        
                        <!-- Time ranges -->
                        <materialDesign:Card Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="5" 
                                           Margin="5" Padding="10">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBox Text="15:00" Width="60" Margin="0,0,5,0"/>
                                <TextBlock Text="-" VerticalAlignment="Center" Margin="5,0"/>
                                <TextBox Text="20:00" Width="60" Margin="5,0,0,0"/>
                            </StackPanel>
                        </materialDesign:Card>
                        
                        <materialDesign:Card Grid.Column="6" Grid.Row="2" Grid.ColumnSpan="2" 
                                           Margin="5" Padding="10" Background="#E8F5E9">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBox Text="09:00" Width="60" Margin="0,0,5,0"/>
                                <TextBlock Text="-" VerticalAlignment="Center" Margin="5,0"/>
                                <TextBox Text="21:00" Width="60" Margin="5,0,0,0"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </Grid>
                </Grid>
            </materialDesign:Card>

            <!-- Time Rules -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Break Time Settings -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,10,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Thời gian nghỉ ngơi" FontSize="16" FontWeight="Bold" 
                                 Foreground="#333" Margin="0,0,0,15"/>
                        
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Nghỉ sau mỗi" Foreground="#666"/>
                                <TextBlock Text="45 phút sử dụng" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                            <materialDesign:PackIcon Grid.Column="1" Kind="Coffee" 
                                                   Width="30" Height="30" Foreground="#FF9800"/>
                        </Grid>
                        
                        <Slider Value="45" Minimum="30" Maximum="120" 
                              TickFrequency="15" IsSnapToTickEnabled="True" Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Thời gian nghỉ" Foreground="#666"/>
                                <TextBlock Text="15 phút" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                            <materialDesign:PackIcon Grid.Column="1" Kind="TimerSand" 
                                                   Width="30" Height="30" Foreground="#4CAF50"/>
                        </Grid>
                        
                        <Slider Value="15" Minimum="5" Maximum="30" 
                              TickFrequency="5" IsSnapToTickEnabled="True"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Restrictions -->
                <materialDesign:Card Grid.Column="1" Margin="10,0,0,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Hạn chế đặc biệt" FontSize="16" FontWeight="Bold" 
                                 Foreground="#333" Margin="0,0,0,15"/>
                        
                        <Border Background="#FFF3E0" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Grid.Column="0" Kind="Moon" 
                                                       Foreground="#FF9800" Margin="0,0,10,0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Giờ ngủ" FontWeight="Bold"/>
                                    <TextBlock Text="22:00 - 06:00" FontSize="12" Foreground="#666"/>
                                </StackPanel>
                                <ToggleButton Grid.Column="2" Style="{StaticResource MaterialDesignSwitchToggleButton}" 
                                            IsChecked="True"/>
                            </Grid>
                        </Border>
                        
                        <Border Background="#FFEBEE" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Grid.Column="0" Kind="School" 
                                                       Foreground="#F44336" Margin="0,0,10,0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Giờ học" FontWeight="Bold"/>
                                    <TextBlock Text="08:00 - 12:00" FontSize="12" Foreground="#666"/>
                                </StackPanel>
                                <ToggleButton Grid.Column="2" Style="{StaticResource MaterialDesignSwitchToggleButton}" 
                                            IsChecked="True"/>
                            </Grid>
                        </Border>
                        
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                              HorizontalAlignment="Stretch" Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" Margin="0,0,8,0"/>
                                <TextBlock Text="Thêm hạn chế"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>