<Page x:Class="KidGuard.WPF.Pages.ScreenshotsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1020"
      Title="Screenshots">

    <Grid Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Interactive Header with Tutorial -->
        <materialDesign:Card Grid.Row="0" Margin="20" Padding="0" 
                           materialDesign:ShadowAssist.ShadowDepth="Depth3">
            <Grid>
                <!-- Gradient Background -->
                <Border>
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#667EEA" Offset="0"/>
                            <GradientStop Color="#764BA2" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <Grid Margin="25,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title Section -->
                    <Grid Grid.Row="0">
                        <StackPanel>
                            <TextBlock Text="Ảnh chụp màn hình" FontSize="30" FontWeight="Light" 
                                     Foreground="White"/>
                            <TextBlock Text="Xem lại các hoạt động trên màn hình của trẻ" 
                                     FontSize="14" Foreground="White" Opacity="0.9" Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <Button Style="{StaticResource MaterialDesignFlatButton}" Foreground="White">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CloudDownload" Margin="0,0,5,0"/>
                                    <TextBlock Text="Tải xuống"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignFlatButton}" Foreground="White" Margin="10,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="DeleteSweep" Margin="0,0,5,0"/>
                                    <TextBlock Text="Xóa nhiều"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Interactive Guide -->
                    <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,15,0,0" 
                          Opacity="0.95">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Step 1 -->
                            <StackPanel Grid.Column="0" Margin="10,0">
                                <Border Width="40" Height="40" CornerRadius="20" 
                                      Background="#667EEA" HorizontalAlignment="Center">
                                    <TextBlock Text="1" Foreground="White" FontSize="18" FontWeight="Bold"
                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Chọn ngày" FontWeight="Bold" HorizontalAlignment="Center" 
                                         Margin="0,8,0,3"/>
                                <TextBlock Text="Dùng lịch để chọn ngày xem" TextWrapping="Wrap" 
                                         HorizontalAlignment="Center" TextAlignment="Center"
                                         FontSize="11" Foreground="#757575"/>
                            </StackPanel>

                            <!-- Arrow 1 -->
                            <materialDesign:PackIcon Grid.Column="0" Kind="ArrowRight" Width="24" Height="24"
                                                   HorizontalAlignment="Right" VerticalAlignment="Top"
                                                   Foreground="#BDBDBD" Margin="0,8,-12,0"/>

                            <!-- Step 2 -->
                            <StackPanel Grid.Column="1" Margin="10,0">
                                <Border Width="40" Height="40" CornerRadius="20" 
                                      Background="#764BA2" HorizontalAlignment="Center">
                                    <TextBlock Text="2" Foreground="White" FontSize="18" FontWeight="Bold"
                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Click xem ảnh" FontWeight="Bold" HorizontalAlignment="Center" 
                                         Margin="0,8,0,3"/>
                                <TextBlock Text="Click vào ảnh thu nhỏ để phóng to" TextWrapping="Wrap" 
                                         HorizontalAlignment="Center" TextAlignment="Center"
                                         FontSize="11" Foreground="#757575"/>
                            </StackPanel>

                            <!-- Arrow 2 -->
                            <materialDesign:PackIcon Grid.Column="1" Kind="ArrowRight" Width="24" Height="24"
                                                   HorizontalAlignment="Right" VerticalAlignment="Top"
                                                   Foreground="#BDBDBD" Margin="0,8,-12,0"/>

                            <!-- Step 3 -->
                            <StackPanel Grid.Column="2" Margin="10,0">
                                <Border Width="40" Height="40" CornerRadius="20" 
                                      Background="#F6AD55" HorizontalAlignment="Center">
                                    <TextBlock Text="3" Foreground="White" FontSize="18" FontWeight="Bold"
                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Thao tác" FontWeight="Bold" HorizontalAlignment="Center" 
                                         Margin="0,8,0,3"/>
                                <TextBlock Text="Zoom, xoay hoặc xem slideshow" TextWrapping="Wrap" 
                                         HorizontalAlignment="Center" TextAlignment="Center"
                                         FontSize="11" Foreground="#757575"/>
                            </StackPanel>

                            <!-- Arrow 3 -->
                            <materialDesign:PackIcon Grid.Column="2" Kind="ArrowRight" Width="24" Height="24"
                                                   HorizontalAlignment="Right" VerticalAlignment="Top"
                                                   Foreground="#BDBDBD" Margin="0,8,-12,0"/>

                            <!-- Step 4 -->
                            <StackPanel Grid.Column="3" Margin="10,0">
                                <Border Width="40" Height="40" CornerRadius="20" 
                                      Background="#48BB78" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Check" Foreground="White" Width="24" Height="24"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Quản lý" FontWeight="Bold" HorizontalAlignment="Center" 
                                         Margin="0,8,0,3"/>
                                <TextBlock Text="Tải xuống hoặc xóa ảnh" TextWrapping="Wrap" 
                                         HorizontalAlignment="Center" TextAlignment="Center"
                                         FontSize="11" Foreground="#757575"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </materialDesign:Card>

        <!-- Filter Controls -->
        <materialDesign:Card Grid.Row="1" Margin="20,0,20,15" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Date Picker -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                    <materialDesign:PackIcon Kind="Calendar" VerticalAlignment="Center" 
                                           Margin="0,0,10,0" Foreground="#667EEA"/>
                    <DatePicker SelectedDate="{x:Static sys:DateTime.Today}"
                              xmlns:sys="clr-namespace:System;assembly=mscorlib"
                              materialDesign:HintAssist.Hint="Chọn ngày"
                              Width="150"/>
                </StackPanel>

                <!-- Time Range -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                    <materialDesign:PackIcon Kind="ClockOutline" VerticalAlignment="Center" 
                                           Margin="0,0,10,0" Foreground="#764BA2"/>
                    <ComboBox Width="150" materialDesign:HintAssist.Hint="Khoảng thời gian">
                        <ComboBoxItem IsSelected="True">Cả ngày</ComboBoxItem>
                        <ComboBoxItem>Buổi sáng (6h-12h)</ComboBoxItem>
                        <ComboBoxItem>Buổi chiều (12h-18h)</ComboBoxItem>
                        <ComboBoxItem>Buổi tối (18h-24h)</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <!-- Stats -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center" 
                          VerticalAlignment="Center">
                    <Border Background="#E3F2FD" CornerRadius="15" Padding="12,6" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Image" Foreground="#2196F3" 
                                                   VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="48" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,3,0"/>
                            <TextBlock Text="ảnh hôm nay" Foreground="#757575"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="#FCE4EC" CornerRadius="15" Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FolderImage" Foreground="#E91E63" 
                                                   VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="2.3 GB" FontWeight="Bold" Foreground="#E91E63" Margin="0,0,3,0"/>
                            <TextBlock Text="dung lượng" Foreground="#757575"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- View Mode -->
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <TextBlock Text="Hiển thị:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <RadioButton GroupName="View" IsChecked="True" Style="{StaticResource MaterialDesignTabRadioButton}">
                        <materialDesign:PackIcon Kind="ViewGridOutline" Width="20" Height="20"/>
                    </RadioButton>
                    <RadioButton GroupName="View" Style="{StaticResource MaterialDesignTabRadioButton}" Margin="5,0">
                        <materialDesign:PackIcon Kind="ViewCarousel" Width="20" Height="20"/>
                    </RadioButton>
                    <RadioButton GroupName="View" Style="{StaticResource MaterialDesignTabRadioButton}">
                        <materialDesign:PackIcon Kind="ViewList" Width="20" Height="20"/>
                    </RadioButton>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Screenshot Gallery -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20,0,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Time Group Header -->
                <Border Grid.Row="0" Background="#F5F5F5" CornerRadius="8" Padding="15,10" Margin="0,0,0,15">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Clock" VerticalAlignment="Center" 
                                                   Margin="0,0,10,0" Foreground="#757575"/>
                            <TextBlock Text="15:00 - 16:00" FontWeight="Bold" FontSize="16" 
                                     VerticalAlignment="Center"/>
                            <materialDesign:Chip Content="12 ảnh" Margin="10,0,0,0" Height="24" FontSize="11"
                                                Background="#E8EAF6" Foreground="#3F51B5"/>
                        </StackPanel>
                        
                        <CheckBox HorizontalAlignment="Right" Content="Chọn tất cả"/>
                    </Grid>
                </Border>

                <!-- Screenshot Grid -->
                <ItemsControl Grid.Row="1" Name="ScreenshotsGrid">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Width="280" Height="200" Margin="10" 
                                               materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                               Cursor="Hand">
                                <Grid>
                                    <!-- Screenshot Image -->
                                    <Image Stretch="UniformToFill">
                                        <Image.Source>
                                            <BitmapImage UriSource="/Resources/screenshot-placeholder.jpg"/>
                                        </Image.Source>
                                    </Image>

                                    <!-- Overlay on Hover -->
                                    <Border Background="#000000" Opacity="0" Name="Overlay">
                                        <Border.Triggers>
                                            <EventTrigger RoutedEvent="MouseEnter">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                       To="0.7" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                            <EventTrigger RoutedEvent="MouseLeave">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                       To="0" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Border.Triggers>
                                    </Border>

                                    <!-- Action Buttons (Show on Hover) -->
                                    <Grid Name="ActionButtons" Visibility="Collapsed">
                                        <Grid.Triggers>
                                            <EventTrigger RoutedEvent="MouseEnter">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames 
                                                          Storyboard.TargetProperty="Visibility">
                                                            <DiscreteObjectKeyFrame KeyTime="0" 
                                                                                   Value="{x:Static Visibility.Visible}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                            <EventTrigger RoutedEvent="MouseLeave">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames 
                                                          Storyboard.TargetProperty="Visibility">
                                                            <DiscreteObjectKeyFrame KeyTime="0" 
                                                                                   Value="{x:Static Visibility.Collapsed}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Grid.Triggers>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center">
                                            <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                                                  Width="40" Height="40" Margin="5"
                                                  Background="White" BorderBrush="White"
                                                  ToolTip="Xem chi tiết">
                                                <materialDesign:PackIcon Kind="Eye" Foreground="#667EEA"/>
                                            </Button>
                                            <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                                                  Width="40" Height="40" Margin="5"
                                                  Background="White" BorderBrush="White"
                                                  ToolTip="Tải xuống">
                                                <materialDesign:PackIcon Kind="Download" Foreground="#48BB78"/>
                                            </Button>
                                            <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                                                  Width="40" Height="40" Margin="5"
                                                  Background="White" BorderBrush="White"
                                                  ToolTip="Xóa">
                                                <materialDesign:PackIcon Kind="Delete" Foreground="#F44336"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Checkbox for multi-select -->
                                    <CheckBox HorizontalAlignment="Left" VerticalAlignment="Top" 
                                            Margin="10" Background="White"/>

                                    <!-- Timestamp -->
                                    <Border Background="Black" Opacity="0.7" HorizontalAlignment="Right" 
                                          VerticalAlignment="Bottom" CornerRadius="4" Padding="8,4" Margin="10">
                                        <TextBlock Text="15:32:45" Foreground="White" FontSize="11" FontWeight="Bold"/>
                                    </Border>

                                    <!-- App Info -->
                                    <Border Background="White" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                          CornerRadius="4" Padding="8,4" Margin="10">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="GoogleChrome" Width="16" Height="16" 
                                                                   Foreground="#4285F4" Margin="0,0,5,0"/>
                                            <TextBlock Text="Chrome" FontSize="11"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <!-- Sample Screenshots -->
                    <ItemsControl.Items>
                        <Grid Tag="15:32:45|Chrome"/>
                        <Grid Tag="15:28:12|Discord"/>
                        <Grid Tag="15:24:33|Minecraft"/>
                        <Grid Tag="15:20:15|YouTube"/>
                        <Grid Tag="15:15:48|VS Code"/>
                        <Grid Tag="15:10:22|Chrome"/>
                    </ItemsControl.Items>
                </ItemsControl>
            </Grid>
        </ScrollViewer>

        <!-- Floating Action Buttons -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                  Margin="0,0,30,30">
            <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                  Margin="0,0,0,10" Background="#48BB78" BorderBrush="#48BB78"
                  ToolTip="Chụp màn hình ngay">
                <materialDesign:PackIcon Kind="Camera" Width="20" Height="20"/>
            </Button>
            
            <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                  Width="56" Height="56" Background="#667EEA" BorderBrush="#667EEA"
                  ToolTip="Xem slideshow">
                <materialDesign:PackIcon Kind="Play" Width="24" Height="24"/>
            </Button>
        </StackPanel>

        <!-- No Screenshots Message -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="40" 
              HorizontalAlignment="Center" VerticalAlignment="Center"
              Visibility="Collapsed">
            <StackPanel>
                <materialDesign:PackIcon Kind="ImageOff" Width="80" Height="80" 
                                       Foreground="#BDBDBD" HorizontalAlignment="Center"/>
                <TextBlock Text="Không có ảnh chụp màn hình" FontSize="18" FontWeight="Bold" 
                         HorizontalAlignment="Center" Margin="0,20,0,10"/>
                <TextBlock Text="Chưa có ảnh nào được chụp trong khoảng thời gian này" 
                         HorizontalAlignment="Center" Foreground="#757575"/>
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                      HorizontalAlignment="Center" Margin="0,20,0,0"
                      Background="#667EEA">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Camera" Margin="0,0,8,0"/>
                        <TextBlock Text="Chụp màn hình ngay"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>