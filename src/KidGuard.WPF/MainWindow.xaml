<Window x:Class="KidGuard.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="KidGuard - Bảo vệ an toàn cho con bạn"
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True">
    
    <Border Background="White" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="-90" RenderingBias="Quality" ShadowDepth="2" Color="Gray" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="{DynamicResource PrimaryHueMidBrush}" 
                    CornerRadius="10,10,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="50">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo and Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="15,0">
                        <materialDesign:PackIcon Kind="Shield" Width="30" Height="30" 
                                                VerticalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="KidGuard" FontSize="20" FontWeight="Bold" 
                                 Foreground="White" VerticalAlignment="Center" Margin="10,0"/>
                    </StackPanel>

                    <!-- Status Bar -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" 
                              HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:Chip Icon="CheckCircle" Content="Bảo vệ hoạt động" 
                                           Foreground="White" Background="#4CAF50" Margin="5,0"/>
                        <materialDesign:Chip Icon="Clock" Content="Còn 2h30p hôm nay" 
                                           Foreground="White" Background="#FF9800" Margin="5,0"/>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,10,0">
                        <Button Style="{StaticResource MaterialDesignFlatButton}" 
                              Click="MinimizeWindow_Click" Width="40" Height="40">
                            <materialDesign:PackIcon Kind="WindowMinimize" Foreground="White"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}" 
                              Click="MaximizeWindow_Click" Width="40" Height="40">
                            <materialDesign:PackIcon Kind="WindowMaximize" Foreground="White"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}" 
                              Click="CloseWindow_Click" Width="40" Height="40">
                            <materialDesign:PackIcon Kind="Close" Foreground="White"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar Navigation -->
                <Border Grid.Column="0" Background="#FAFAFA">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- User Profile -->
                        <materialDesign:Card Grid.Row="0" Margin="15" Padding="15">
                            <StackPanel>
                                <Grid>
                                    <Ellipse Width="60" Height="60" HorizontalAlignment="Center">
                                        <Ellipse.Fill>
                                            <LinearGradientBrush>
                                                <GradientStop Color="#667EEA" Offset="0"/>
                                                <GradientStop Color="#764BA2" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <TextBlock Text="A" FontSize="24" FontWeight="Bold" 
                                             Foreground="White" HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="Tài khoản Admin" FontWeight="Bold" 
                                         HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                <TextBlock Text="Quản trị viên" Foreground="Gray" FontSize="12"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Navigation Menu -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="10,0">
                                <!-- Dashboard -->
                                <RadioButton x:Name="btnDashboard" Style="{StaticResource MaterialDesignTabRadioButton}" 
                                           Height="50" IsChecked="True" Click="NavigationButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ViewDashboard" Width="24" Height="24" 
                                                               VerticalAlignment="Center" Margin="10,0"/>
                                        <TextBlock Text="Tổng quan" VerticalAlignment="Center" FontSize="14"/>
                                    </StackPanel>
                                </RadioButton>

                                <!-- Time Management -->
                                <RadioButton x:Name="btnTimeManagement" Style="{StaticResource MaterialDesignTabRadioButton}" 
                                           Height="50" Click="NavigationButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Clock" Width="24" Height="24" 
                                                               VerticalAlignment="Center" Margin="10,0"/>
                                        <TextBlock Text="Quản lý thời gian" VerticalAlignment="Center" FontSize="14"/>
                                    </StackPanel>
                                </RadioButton>

                                <!-- Application Control -->
                                <RadioButton x:Name="btnAppControl" Style="{StaticResource MaterialDesignTabRadioButton}" 
                                           Height="50" Click="NavigationButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Apps" Width="24" Height="24" 
                                                               VerticalAlignment="Center" Margin="10,0"/>
                                        <TextBlock Text="Quản lý ứng dụng" VerticalAlignment="Center" FontSize="14"/>
                                    </StackPanel>
                                </RadioButton>

                                <!-- Website Filter -->
                                <RadioButton x:Name="btnWebFilter" Style="{StaticResource MaterialDesignTabRadioButton}" 
                                           Height="50" Click="NavigationButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Web" Width="24" Height="24" 
                                                               VerticalAlignment="Center" Margin="10,0"/>
                                        <TextBlock Text="Lọc website" VerticalAlignment="Center" FontSize="14"/>
                                    </StackPanel>
                                </RadioButton>

                                <!-- Activity Logs -->
                                <RadioButton x:Name="btnActivityLogs" Style="{StaticResource MaterialDesignTabRadioButton}" 
                                           Height="50" Click="NavigationButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="History" Width="24" Height="24" 
                                                               VerticalAlignment="Center" Margin="10,0"/>
                                        <TextBlock Text="Lịch sử hoạt động" VerticalAlignment="Center" FontSize="14"/>
                                    </StackPanel>
                                </RadioButton>

                                <!-- Screenshots -->
                                <RadioButton x:Name="btnScreenshots" Style="{StaticResource MaterialDesignTabRadioButton}" 
                                           Height="50" Click="NavigationButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Camera" Width="24" Height="24" 
                                                               VerticalAlignment="Center" Margin="10,0"/>
                                        <TextBlock Text="Ảnh chụp màn hình" VerticalAlignment="Center" FontSize="14"/>
                                    </StackPanel>
                                </RadioButton>

                                <!-- Reports -->
                                <RadioButton x:Name="btnReports" Style="{StaticResource MaterialDesignTabRadioButton}" 
                                           Height="50" Click="NavigationButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ChartLine" Width="24" Height="24" 
                                                               VerticalAlignment="Center" Margin="10,0"/>
                                        <TextBlock Text="Báo cáo thống kê" VerticalAlignment="Center" FontSize="14"/>
                                    </StackPanel>
                                </RadioButton>

                                <!-- Settings -->
                                <RadioButton x:Name="btnSettings" Style="{StaticResource MaterialDesignTabRadioButton}" 
                                           Height="50" Click="NavigationButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Settings" Width="24" Height="24" 
                                                               VerticalAlignment="Center" Margin="10,0"/>
                                        <TextBlock Text="Cài đặt" VerticalAlignment="Center" FontSize="14"/>
                                    </StackPanel>
                                </RadioButton>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Bottom Actions -->
                        <StackPanel Grid.Row="2" Margin="15">
                            <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                                  materialDesign:ButtonAssist.CornerRadius="20"
                                  Background="#FF5722" BorderThickness="0"
                                  Height="40" Click="EmergencyLock_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Lock" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="KHÓA KHẨN CẤP" FontWeight="Bold"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                  Height="40" Margin="0,10,0,0" Click="Logout_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Logout" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="Đăng xuất"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <Border Grid.Column="1" Background="White">
                    <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>